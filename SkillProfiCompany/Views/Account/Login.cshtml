<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Styles/Style.css">
    <title>Holiday</title>
</head>
<body>
    @model SkillProfiCompany.Users.UserLogin

    <main class="flex login-container">
        <section class="login-form">
            <h1 class="login-header">Логин</h1>
            <form action="~/Account/Login" class="login-panel" method="post">
                <input class="login-input" type="text" name="LoginProp" placeholder="Логин" required minlength="5" maxlength="30">
                <input type="hidden" asp-for="ReturnUrl" />
                <input class="login-input" type="password" name="Password" placeholder="Пароль" required minlength="5" maxlength="20">
                
                <label class="login-error">Ошибка</label>
                <div class="flex login">
                    <a class="login-form-link" href="~/Account/Registration">Регистрация</a>
                    <input class="login-btn" type="submit" value="Войти">
                </div>
            </form>
        </section>
    </main>
</body>
</html>
