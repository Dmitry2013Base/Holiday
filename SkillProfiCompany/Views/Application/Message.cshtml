@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/Styles/bootstrap-grid.min.css">
<link rel="stylesheet" href="~/Styles/BodyStyle.css">
<link rel="stylesheet" href="~/Styles/MessageLogStyle.css">

@model UserApplication

@{
    UserApplication application = Model;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h2>История сообщений пользователя "@application.User.UserName"</h2>
            <p class="status" hidden>@application.ApplicationStatus.StatusName</p>

            <div class="user-message">
                <p id="head"><b>Сообщение №@application.Id</b></p>
                @application.UserMessage;
                <select></select>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h2>Другие сообщения пользователя "@application.User.UserName"</h2>
            <ol class="user-list-message"></ol>
        </div>
    </div>
</div>

<script src="~/Scripts/Message.js"></script>


